<div class="card" style="width: 200px;">
    <div class="card-body">
        <h5 class="card-title">@Node.Title</h5>
        @if (!string.IsNullOrEmpty(Node.DisplayValue))
        {
            <p class="card-text">@Node.DisplayValue</p>
        }
    </div>

    <ul>
        @foreach (var row in Node.ConnectorRows)
        {
            <ConnectorRowComponent Row="row"></ConnectorRowComponent>
        }
    </ul>
</div>
